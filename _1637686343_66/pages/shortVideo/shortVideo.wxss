.m-loadingEnd {
    font-size: 24rpx;
    color: #fff;
    background-color: #36c338;
    text-align: center;
    line-height: 70rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 6;
}

.m-short-handle {
    display: flex;
    align-items: center;
    height: 100rpx;
    box-sizing: border-box;
    padding: 0rpx 30rpx;
    background: #ffffff;
}

.m-short-handle-wrapper {
    display: block;
    height: 114rpx;
    box-sizing: border-box;
    padding-bottom: 14rpx;
    background: #f5f5f5;
}

.m-short-handle_item {
    font-size: 28rpx;
    color: #666;
    line-height: 34rpx;
    display: flex;
    height: 34rpx;
    position: relative;
}

.m-short-text {
    font-size: 20rpx;
    color: #999999;
    position: absolute;
    top: -20rpx;
    left: 38rpx;
    white-space: nowrap;
    max-width: 80rpx;
    display: inline-block;
    overflow: hidden;
}

.m-short-share-text {
    left: 95rpx;
}

.m-short-handle_item.playnum {
    color: #999;
    flex: 1;
}

.m-short-handle_item.user-content {
    color: #666666;
    font-size: 26rpx;
    flex: 1;
    position: relative;
}

.c-icon-iqiyi-user {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-top: -12rpx;
    margin-right: 14rpx;
}

.m-iqiyi-user-tag {
    border-radius: 50%;
    position: absolute;
    top: 20rpx;
    left: 40rpx;
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
}

.c-icon-playAmount.short-handle-playnum {
    margin: 5rpx 14rpx 5rpx 0;
}

.c-icon-share.short-handle-share {
    width: 37rpx;
    height: 36rpx;
    margin-right: 30rpx;
    margin-left: 60rpx;
}

@import "../../__wuBaseWxss__/13.wxss";

page {
    height: 100%;
    line-height: 1;
}

.container {
    width: 100%;
    height: 100%;
    display: box;
    box-orient: vertical;
}

.m-box {
    background-color: #f5f5f5;
}

.m-floatLayer {
    z-index: 5;
}

.last-record-load {
    width: 100%;
    height: auto;
    background: #F5F5F7;
    padding: 6rpx 0 20rpx;
}

.last-record-load-content {
    color: #23D41E;
    font-size: 26rpx;
    background: #e0f9df;
    margin: 0 24rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    line-height: 80rpx;
    font-weight: 700;
}

.c-short-icon-refresh {
    width: 23rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-left: 14rpx;
    margin-top: -3rpx;
}

.c-icon-play {
    width: 100rpx;
    height: 100rpx;
}