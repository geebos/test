page {
    background-color: #fff;
    height: 100%;
    line-height: 1;
}

.container {
    background-color: #fff;
    width: 100%;
    height: 100%;
    display: box;
    box-orient: vertical;
}

.m-liveVideo-wrap {
    padding: 0 0 25rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

.m-appointment-text {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    line-height: 52rpx;
    margin-top: 11rpx;
    padding: 0 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.m-liveVideo-footer {
    width: 750rpx;
    height: 172rpx;
}

.m-liveVideo-footer .footer-logo {
    width: 100%;
    height: 100%;
}

.videoBody {
    position: relative;
    overflow: hidden;
    box-flex: 1;
}

.m-videopic_pic {
    background-color: #000;
}

.m-list-button-form {
    width: 100%;
    height: 100%;
    display: block;
}

.m-list-liveVideo_imgBox .live-icon {
    position: absolute;
    width: 100rpx;
    height: 40rpx;
    top: 0rpx;
    right: 0rpx;
}

.m-list-liveVideo-btn::before,.m-list-liveVideo-btn::after {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -9px;
    margin-top: -9px;
}

.c-icon-tennis {
    width: 122rpx;
    height: 40rpx;
    top: 2rpx;
    right: 6rpx;
    position: absolute;
}