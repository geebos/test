.m-liveVideo-intro {
    padding: 0 70rpx 34rpx;
}

.m-liveVideo-intro-items {
    text-align: center;
}

.m-liveVideo-intro-title_h {
    font-size: 36rpx;
    color: #333;
    font-weight: 700;
    line-height: 56rpx;
    margin: 31rpx 0 38rpx;
    display: block;
    max-height: 112rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.m-liveVideo-intro-items_p {
    font-size: 26rpx;
    color: #333;
    line-height: 46rpx;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

