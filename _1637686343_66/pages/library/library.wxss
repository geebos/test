.m-sortList {
    padding: 18rpx 0;
}

.m-sortList-wrap {
    background-color: #fff;
    white-space: nowrap;
    padding: 12rpx 0;
    box-sizing: border-box;
}

.m-sortList_item {
    font-size: 26rpx;
    color: #333;
    padding: 0 26rpx;
    background-color: #fff;
    border-radius: 50rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    box-sizing: border-box;
}

.m-sortList_item:nth-child(1) {
    margin-left: 14rpx;
}

.m-sortList_item:last-child {
    margin-right: 14rpx;
}

.m-sortList_item.select {
    color: #0bbe06;
    background-color: #f7f7f7;
}

