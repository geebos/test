@import "../../__wuBaseWxss__/0.wxss";

.m-rank-tab {
    width: 100%;
    height: 80rpx;
    position: fixed;
    top: 82rpx;
    left: 0;
    border-bottom: 2rpx solid #f0f0f0;
    background-color: #ffffff;
    padding: 0rpx 80rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 5rpx;
    z-index: 150;
}

.m-rank-tab-item {
    font-size: 32rpx;
    color: #333333;
    text-align: center;
    line-height: 1;
    padding: 24rpx 0;
}

.m-rank-tab-item.selected {
    color: #0BBE06;
}

.m-rank-categories {
    width: 100%;
    font-size: 34rpx;
    color: #000000;
    background-color: #F6F6F6;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 200;
    height: 82rpx;
    border-bottom: 2rpx solid #e6e6e6;
}

.m-rank-wrap {
    display: block;
    width: calc(100% - 80rpx);
    height: 82rpx;
    padding: 0 0 0 5rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
    overflow: hidden;
    box-sizing: border-box;
}

.m-categories-scroll {
    width: 100%;
    white-space: nowrap;
    position: relative;
    height: 100%;
    white-space: nowrap;
}

.m-categories-item {
    display: inline-block;
    line-height: 82rpx;
    padding: 0 25rpx;
    position: relative;
    height: 100%;
}

.m-categories-item_bottom {
    position: absolute;
    width: 24rpx;
    height: 6rpx;
    bottom: 0;
    left: 50%;
    margin-left: -12rpx;
}

.m-categories-item-text.selected {
    color: #00c000;
}

.m-rank-category-icon {
    width: 80rpx;
    height: 82rpx;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 150;
    background-color: #F6F6F6;
}

.m-rank-category-shadow {
    width: 5rpx;
    height: 82rpx;
    position: absolute;
    top: 0;
    left: -3rpx;
}

.m-rank-category-image {
    width: 30rpx;
    height: 18rpx;
    position: relative;
    top: 32rpx;
    display: block;
    margin: auto;
}

.m-rank-list {
    width: 100%;
    position: fixed;
    background-color: #ffffff;
    top: 162rpx;
    height: calc(100% - 162rpx);
    z-index: 100;
}

.m-rank-list-scroll {
    width: 100%;
    position: relative;
    height: 100%;
}

.m-rank-list-item {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    display: flex;
}

.m-rank-left {
    position: relative;
    width: 240rpx;
    height: 135rpx;
    font-size: 0;
}

.m-rank-image {
    width: 240rpx;
    height: 135rpx;
    display: block;
}

.m-rank-icon {
    position: absolute;
    display: block;
    width: 50rpx;
    height: 53rpx;
    top: 0;
    left: 0;
    z-index: 1;
}

.m-rank-icon-ios .c-picicon-red {
    top: 0;
}

.m-rank-num {
    position: absolute;
    top: 3rpx;
    left: 10rpx;
    font-size: 26rpx;
    color: #ffffff;
    font-weight: 700;
    font-style: italic;
    z-index: 2;
}

.m-rank-num.medium-num {
    left: 5rpx;
}

.m-rank-num.large-num {
    left: 0rpx;
}

.m-rank-bottom-right {
    position: absolute;
    bottom: 10rpx;
    right: 20rpx;
    color: #ffffff;
    font-size: 22rpx;
    z-index: 2;
}

.m-rank-shadow {
    height: 67rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
}

.m-rank-info {
    padding: 10rpx 0 10rpx 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    flex: 1;
}

.m-rank-title {
    font-size: 28rpx;
    color: #333333;
    line-height: 1;
    max-width: 450rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.m-rank-subtitle {
    font-size: 24rpx;
    color: #999999;
    line-height: 1;
    max-width: 450rpx;
    padding-top: 18rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.m-rank-hot {
    font-size: 22rpx;
    padding-top: 25rpx;
    color: #999999;
    line-height: 1;
}

.m-rank-hot.rank-hot-padding {
    padding-top: 62rpx;
}

@import "../../__wuBaseWxss__/4.wxss";

@import "../../__wuBaseWxss__/13.wxss";

page {
    height: 100%;
}

.container {
    height: auto;
    background-color: #F6F6F6;
}

.m-rank-share {
    width: 100%;
    height: 100%;
}

.m-rank-share-btn {
    width: 246rpx;
    height: 85rpx;
    position: fixed;
    bottom: 20rpx;
    background-color: transparent;
    border: none;
    padding: 0;
    z-index: 200;
}

.m-rank-share-btn::after {
    border: none;
}

.rank-category-expand {
    position: fixed;
    top: 82rpx;
    left: 0;
    width: 100%;
    height: auto;
    background: rgba(255,255,255,0.96);
    border-bottom: 1rpx solid #F0F0F0;
    z-index: 180;
    font-size: 0;
}

.rank-category-expand-item {
    display: inline-block;
    width: 20%;
    font-size: 26rpx;
    color: #464646;
    text-align: center;
}

.rank-expand-item-text {
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
    line-height: 78rpx;
}

.rank-expand-item-text.selected {
    color: #0BBE06;
}